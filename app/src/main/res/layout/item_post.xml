<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="56dp">
        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:src="@drawable/ic_account_circle"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:id="@+id/post_photo_profile"
                    android:layout_marginStart="@dimen/spacing8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="username"
            app:layout_constraintLeft_toRightOf="@id/post_photo_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/spacing8dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <ImageView android:layout_width="40dp" android:layout_height="match_parent"
            android:src="@drawable/ic_more_vert"
            android:tint="@color/colorGray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
                   android:padding="@dimen/spacing4dp"
            android:layout_marginEnd="@dimen/spacing8dp"/>
    </android.support.constraint.ConstraintLayout>

    <ImageView android:layout_width="match_parent" android:layout_height="220dp"
        android:src="@drawable/ic_image"
        android:background="@android:color/black"
        android:tint="@android:color/white"/>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="56dp">

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:src="@drawable/ic_favorite_border"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:id="@+id/post_like"
                   android:padding="@dimen/spacing4dp"
                   android:layout_marginStart="@dimen/spacing8dp"/>

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:src="@drawable/ic_mode_comment"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/post_like"
                   android:id="@+id/post_comment"
                   android:layout_marginStart="@dimen/spacing8dp"
                   android:padding="@dimen/spacing4dp"/>

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:src="@drawable/ic_send"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toRightOf="@id/post_comment"
                   android:id="@+id/post_send"
                   android:layout_marginStart="@dimen/spacing8dp"
                   android:padding="@dimen/spacing4dp"/>

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:src="@drawable/ic_bookmark_border"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:id="@+id/post_bookmard"
                   android:padding="@dimen/spacing4dp"
                   android:layout_marginEnd="@dimen/spacing8dp"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>